# SDN-NIDPS Environment Configuration

# Controller Settings
RYU_HOST=0.0.0.0
RYU_PORT=6653
WSAPI_PORT=8080

# Database
DATABASE_URL=sqlite:///var/lib/sdn-nidps/threats.db
LOG_DATABASE=sqlite:///var/lib/sdn-nidps/logs.db

# Suricata
SURICATA_HOME=/etc/suricata
SURICATA_RULES=/etc/suricata/rules
EVE_LOG=/var/log/suricata/eve.json

# Security
ENABLE_TLS=true
TLS_CERT=/etc/ssl/certs/sdn-nidps.crt
TLS_KEY=/etc/ssl/private/sdn-nidps.key

# API
API_HOST=0.0.0.0
API_PORT=8080
API_DEBUG=false
API_SECRET=your_secret_key_here

# Logging
LOG_LEVEL=INFO
LOG_FILE=/var/log/sdn-nidps/app.log

# Redis (for distributed features)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# Performance
MAX_WORKERS=8
QUEUE_SIZE=10000
CACHE_TTL=300

# Features
ENABLE_IDS=true
ENABLE_BEHAVIORAL_ANALYSIS=true
ENABLE_SCALABILITY=false

# Email Alerts
SMTP_SERVER=localhost
SMTP_PORT=25
ALERT_EMAIL=admin@example.com

# Demo Mode
DEMO_MODE=true
DEMO_ATTACKS=true
